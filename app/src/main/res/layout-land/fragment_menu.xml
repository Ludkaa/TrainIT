<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MenuFragment">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="286dp"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:src="@drawable/logo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.074"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.483" />

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="84dp"
        android:layout_marginTop="60dp"
        android:layout_marginBottom="10dp"
        android:fontFamily="@font/bowlby_one"
        android:text="@string/title"
        android:textColor="#4F5C58"
        android:textSize="46sp"
        app:layout_constraintBottom_toTopOf="@+id/button_new_activity"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.865"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.822" />

    <Button
        android:id="@+id/button_all_activities"
        android:layout_width="270dp"
        android:layout_height="55dp"
        android:width="1000dp"
        android:backgroundTint="#89AF9A"
        android:text="@string/all_activities"
        app:layout_constraintBottom_toTopOf="@+id/button_actual_weather"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.917"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/button_new_activity"
        android:layout_width="270dp"
        android:layout_height="55dp"
        android:width="1000dp"
        android:backgroundTint="#4A9175"
        android:text="@string/new_activity"
        android:textColorHighlight="@color/purple_200"
        android:textColorLink="#FFFFFF"
        app:layout_constraintBottom_toTopOf="@+id/button_all_activities"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.917"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/button_actual_weather"
        android:layout_width="270dp"
        android:layout_height="55dp"
        android:layout_marginBottom="32dp"
        android:width="1000dp"
        android:backgroundTint="#A6B5B0"
        android:text="@string/actual_weather"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.915"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>